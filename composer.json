{
    "name": "spotify/challenge",
    "description": "Spotify Challenge",
    "keywords": [
        "spotify",
        "challenge",
        "artist",
        "album",
        "api",
        "rest"
    ],
    "homepage": "https://github.com/arielbelloc",
    "license": "MIT",
    "authors": [
        {
            "name": "Ariel Belloc"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.0",
        "monolog/monolog": "^2.2",
        "php-di/php-di": "^6.1",
        "slim/slim": "3.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public",
        "test": "phpunit"
    }
}
